<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- TOP BAR (edge-to-edge with bottom divider only) -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/topbar_bg"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

    <!-- Left icon -->
    <ImageView
        android:id="@+id/topLeftIcon"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/chat_vector"
        android:tint="@color/white"
        android:background="@drawable/clickable_bg" />

    <!-- Settings (gear) -->
    <ImageButton
        android:id="@+id/openOptions"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/settings_wheel"
        android:tint="@color/white"
        android:background="@drawable/clickable_bg" />

    <!-- Delete -->
    <ImageButton
        android:id="@+id/resetScreen"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/openOptions"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_delete"
        android:tint="@color/danger"
        android:background="@drawable/clickable_bg" />

    <!-- Reroll -->
    <ImageButton
        android:id="@+id/rerollButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/resetScreen"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_reroll"
        android:tint="@color/white"
        android:background="@drawable/clickable_bg" />


    <!-- App name (scrolls if long) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/topLeftIcon"
        android:layout_toStartOf="@id/rerollButton"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:fadingEdgeLength="12dp">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="160dp"
            android:text="EchoMate"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:ellipsize="end"
            android:singleLine="true"
            android:scrollHorizontally="true" />
    </HorizontalScrollView>
</RelativeLayout>

    <!-- 1dp bottom divider line under the bar (kept for consistency) -->
<View
android:id="@+id/topBarDivider"
android:layout_width="match_parent"
android:layout_height="1dp"
android:layout_below="@id/topBar"
android:background="@color/top_bar_divider" />

    <!-- Messages list -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/recycler_view"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_below="@id/topBarDivider"
android:layout_above="@id/bottom_layout"
android:layout_marginTop="10dp"
android:layout_marginBottom="10dp"
android:clipToPadding="false"
android:scrollbars="vertical" />

    <!-- Bottom input row (unchanged) -->
<RelativeLayout
android:id="@+id/bottom_layout"
android:layout_width="match_parent"
android:layout_height="80dp"
android:layout_alignParentBottom="true"
android:padding="8dp">

<EditText
    android:id="@+id/textInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_toEndOf="@id/attachImage"
    android:layout_toStartOf="@id/sendRequest"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_textbox"
    android:hint='@string/textInput'
    android:inputType="text"
    android:textAlignment="textStart"
    android:autofillHints="text"
    android:elevation="4dp" />

<ImageButton
    android:id="@+id/attachImage"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentStart="true"
    android:layout_centerInParent="true"
    android:padding="8dp"
    android:background="@drawable/clickable_bg"
    android:src="@drawable/ic_add_image"
    android:tint="@color/white"
    android:contentDescription="Attach image" />

<ImageButton
    android:id="@+id/sendRequest"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentEnd="true"
    android:layout_centerInParent="true"
    android:layout_marginStart="10dp"
    android:padding="8dp"
    android:background="@drawable/clickable_bg"
    android:src="@drawable/icon_send" />
</RelativeLayout>
    </RelativeLayout>
