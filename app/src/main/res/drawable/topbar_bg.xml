<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid top bar -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/top_bar_color"/>
        </shape>
    </item>

    <!-- 1dp divider at the bottom -->
    <item android:top="55dp">
        <shape android:shape="rectangle">
            <size android:height="1dp"/>
            <solid android:color="@color/top_bar_divider"/>
        </shape>
    </item>
</layer-list>
